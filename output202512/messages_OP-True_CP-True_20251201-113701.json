      "content": "<!DOCTYPE html>\n<html lang=\"zh-CN\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>æé€Ÿè´­ - ç²¾é€‰å¥½ç‰©</title>\n    <style>\n        :root {\n            --primary: #2563EB;\n            --primary-hover: #1D4ED8;\n            --secondary: #F59E0B;\n            --danger: #EF4444;\n            --bg-light: #F3F4F6;\n            --text-dark: #1F2937;\n            --text-gray: #6B7280;\n            --white: #ffffff;\n            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);\n            --transition: all 0.3s ease;\n        }\n\n        * {\n            box-sizing: border-box;\n            margin: 0;\n            padding: 0;\n            font-family: -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif;\n        }\n\n        body {\n            background-color: var(--bg-light);\n            color: var(--text-dark);\n            overflow-x: hidden;\n        }\n\n        /* ä¿ƒé”€æ¨ªå¹… */\n        .promo-banner {\n            background: linear-gradient(90deg, var(--primary), #4F46E5);\n            color: var(--white);\n            text-align: center;\n            padding: 10px;\n            font-size: 0.9rem;\n            font-weight: 500;\n            display: flex;\n            justify-content: center;\n            align-items: center;\n            gap: 15px;\n        }\n\n        .countdown {\n            background: rgba(255, 255, 255, 0.2);\n            padding: 2px 8px;\n            border-radius: 4px;\n            font-family: monospace;\n            font-weight: bold;\n        }\n\n        /* å¤´éƒ¨ */\n        .site-header {\n            background: var(--white);\n            padding: 1rem 2rem;\n            display: flex;\n            justify-content: space-between;\n            align-items: center;\n            box-shadow: var(--shadow);\n            position: sticky;\n            top: 0;\n            z-index: 100;\n        }\n\n        .logo {\n            font-size: 1.5rem;\n            font-weight: 800;\n            color: var(--text-dark);\n            text-decoration: none;\n        }\n\n        .logo span { color: var(--primary); }\n\n        .cart-btn {\n            position: relative;\n            background: none;\n            border: none;\n            cursor: pointer;\n            font-size: 1.5rem;\n            padding: 5px;\n        }\n\n        .cart-badge {\n            position: absolute;\n            top: -5px;\n            right: -5px;\n            background: var(--danger);\n            color: var(--white);\n            font-size: 0.75rem;\n            width: 20px;\n            height: 20px;\n            border-radius: 50%;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n            font-weight: bold;\n        }\n\n        /* ä¸»å†…å®¹åŒº */\n        .main-content {\n            max-width: 1200px;\n            margin: 2rem auto;\n            padding: 0 1rem;\n        }\n\n        /* åˆ†ç±»å¯¼èˆª */\n        .category-nav {\n            display: flex;\n            justify-content: center;\n            gap: 1rem;\n            margin-bottom: 2rem;\n            flex-wrap: wrap;\n        }\n\n        .cat-btn {\n            padding: 8px 20px;\n            border: 1px solid #e5e7eb;\n            background: var(--white);\n            border-radius: 20px;\n            cursor: pointer;\n            transition: var(--transition);\n            font-weight: 500;\n        }\n\n        .cat-btn:hover, .cat-btn.active {\n            background: var(--primary);\n            color: var(--white);\n            border-color: var(--primary);\n        }\n\n        /* å•†å“ç½‘æ ¼ */\n        .product-grid {\n            display: grid;\n            grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));\n            gap: 2rem;\n        }\n\n        /* å•†å“å¡ç‰‡ */\n        .product-card {\n            background: var(--white);\n            border-radius: 12px;\n            overflow: hidden;\n            box-shadow: var(--shadow);\n            transition: var(--transition);\n            position: relative;\n            display: flex;\n            flex-direction: column;\n        }\n\n        .product-card:hover {\n            transform: translateY(-5px);\n            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);\n        }\n\n        .badge {\n            position: absolute;\n            top: 10px;\n            left: 10px;\n            padding: 4px 8px;\n            border-radius: 4px;\n            font-size: 0.75rem;\n            font-weight: bold;\n            color: var(--white);\n            z-index: 1;\n        }\n\n        .badge.hot { background: var(--danger); }\n        .badge.sale { background: var(--secondary); }\n\n        .product-img-wrapper {\n            height: 200px;\n            overflow: hidden;\n            background: #f0f0f0;\n            position: relative;\n        }\n\n        .product-img {\n            width: 100%;\n            height: 100%;\n            object-fit: cover;\n            transition: transform 0.5s;\n        }\n\n        .product-card:hover .product-img {\n            transform: scale(1.05);\n        }\n\n        .product-info {\n            padding: 1.5rem;\n            flex-grow: 1;\n            display: flex;\n            flex-direction: column;\n        }\n\n        .product-title {\n            font-size: 1.1rem;\n            margin-bottom: 0.5rem;\n            font-weight: 600;\n        }\n\n        .price-box {\n            margin-top: auto;\n            margin-bottom: 1rem;\n            display: flex;\n            align-items: baseline;\n            gap: 10px;\n        }\n\n        .current-price {\n            font-size: 1.25rem;\n            color: var(--danger);\n            font-weight: bold;\n        }\n\n        .original-price {\n            text-decoration: line-through;\n            color: var(--text-gray);\n            font-size: 0.9rem;\n        }\n\n        .action-btn {\n            width: 100%;\n            padding: 10px;\n            background: var(--primary);\n            color: var(--white);\n            border: none;\n            border-radius: 6px;\n            cursor: pointer;\n            font-weight: 600;\n            transition: var(--transition);\n        }\n\n        .action-btn:hover {\n            background: var(--primary-hover);\n        }\n\n        .view-btn {\n            background: var(--white);\n            border: 1px solid var(--primary);\n            color: var(--primary);\n            margin-bottom: 0.5rem;\n        }\n\n        .view-btn:hover {\n            background: #eff6ff;\n        }\n\n        /* è´­ç‰©è½¦æŠ½å±‰ */\n        .cart-drawer {\n            position: fixed;\n            top: 0;\n            right: 0;\n            width: 100%;\n            max-width: 400px;\n            height: 100vh;\n            background: var(--white);\n            box-shadow: -5px 0 15px rgba(0,0,0,0.1);\n            transform: translateX(100%);\n            transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);\n            z-index: 200;\n            display: flex;\n            flex-direction: column;\n        }\n\n        .cart-drawer.open {\n            transform: translateX(0);\n        }\n\n        .cart-overlay {\n            position: fixed;\n            top: 0;\n            left: 0;\n            width: 100%;\n            height: 100%;\n            background: rgba(0,0,0,0.5);\n            z-index: 150;\n            opacity: 0;\n            visibility: hidden;\n            transition: 0.3s;\n        }\n\n        .cart-overlay.open {\n            opacity: 1;\n            visibility: visible;\n        }\n\n        .cart-header {\n            padding: 1.5rem;\n            border-bottom: 1px solid #e5e7eb;\n            display: flex;\n            justify-content: space-between;\n            align-items: center;\n        }\n\n        .close-cart {\n            background: none;\n            border: none;\n            font-size: 1.5rem;\n            cursor: pointer;\n        }\n\n        .cart-items {\n            flex-grow: 1;\n            overflow-y: auto;\n            padding: 1rem;\n        }\n\n        .cart-item {\n            display: flex;\n            gap: 1rem;\n            margin-bottom: 1rem;\n            padding-bottom: 1rem;\n            border-bottom: 1px solid #f3f4f6;\n            align-items: center;\n        }\n\n        .cart-item img {\n            width: 60px;\n            height: 60px;\n            object-fit: cover;\n            border-radius: 6px;\n        }\n\n        .item-details {\n            flex-grow: 1;\n        }\n\n        .item-title {\n            font-size: 0.9rem;\n            font-weight: 600;\n            margin-bottom: 4px;\n        }\n\n        .item-price {\n            color: var(--text-gray);\n            font-size: 0.85rem;\n        }\n\n        .qty-controls {\n            display: flex;\n            align-items: center;\n            gap: 8px;\n            margin-top: 5px;\n        }\n\n        .qty-btn {\n            width: 24px;\n            height: 24px;\n            border: 1px solid #e5e7eb;\n            background: var(--white);\n            border-radius: 4px;\n            cursor: pointer;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n        }\n\n        .remove-btn {\n            color: var(--danger);\n            background: none;\n            border: none;\n            cursor: pointer;\n            padding: 5px;\n        }\n\n        .cart-footer {\n            padding: 1.5rem;\n            border-top: 1px solid #e5e7eb;\n            background: #f9fafb;\n        }\n\n        .cart-total {\n            display: flex;\n            justify-content: space-between;\n            font-size: 1.2rem;\n            font-weight: bold;\n            margin-bottom: 1rem;\n        }\n\n        .checkout-btn {\n            width: 100%;\n            padding: 12px;\n            background: var(--text-dark);\n            color: var(--white);\n            border: none;\n            border-radius: 6px;\n            font-size: 1rem;\n            cursor: pointer;\n            font-weight: 600;\n        }\n\n        .empty-cart-msg {\n            text-align: center;\n            color: var(--text-gray);\n            margin-top: 2rem;\n        }\n\n        /* äº§å“è¯¦æƒ…å¼¹çª— */\n        .modal-overlay {\n            position: fixed;\n            top: 0;\n            left: 0;\n            width: 100%;\n            height: 100%;\n            background: rgba(0,0,0,0.6);\n            z-index: 300;\n            display: flex;\n            justify-content: center;\n            align-items: center;\n            opacity: 0;\n            visibility: hidden;\n            transition: 0.3s;\n            padding: 1rem;\n        }\n\n        .modal-overlay.open {\n            opacity: 1;\n            visibility: visible;\n        }\n\n        .modal {\n            background: var(--white);\n            width: 100%;\n            max-width: 800px;\n            border-radius: 16px;\n            overflow: hidden;\n            display: flex;\n            flex-direction: column;\n            position: relative;\n            max-height: 90vh;\n            overflow-y: auto;\n        }\n\n        @media (min-width: 768px) {\n            .modal {\n                flex-direction: row;\n            }\n            .modal-img {\n                width: 50%;\n                height: auto;\n            }\n            .modal-info {\n                width: 50%;\n            }\n        }\n\n        .modal-img {\n            width: 100%;\n            height: 300px;\n            object-fit: cover;\n        }\n\n        .modal-info {\n            padding: 2rem;\n        }\n\n        .close-modal {\n            position: absolute;\n            top: 1rem;\n            right: 1rem;\n            background: rgba(255,255,255,0.8);\n            border: none;\n            width: 32px;\n            height: 32px;\n            border-radius: 50%;\n            cursor: pointer;\n            font-size: 1.2rem;\n            z-index: 10;\n        }\n\n        .stock-status {\n            display: inline-block;\n            padding: 4px 8px;\n            background: #ECFDF5;\n            color: #059669;\n            border-radius: 4px;\n            font-size: 0.8rem;\n            margin-bottom: 1rem;\n        }\n\n        .stock-low {\n            background: #FEF3C7;\n            color: #D97706;\n        }\n\n        /* Toast æç¤º */\n        .toast {\n            position: fixed;\n            bottom: 20px;\n            left: 50%;\n            transform: translateX(-50%) translateY(100px);\n            background: var(--text-dark);\n            color: var(--white);\n            padding: 12px 24px;\n            border-radius: 30px;\n            box-shadow: 0 10px 15px rgba(0,0,0,0.2);\n            z-index: 1000;\n            transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);\n            display: flex;\n            align-items: center;\n            gap: 10px;\n        }\n\n        .toast.show {\n            transform: translateX(-50%) translateY(0);\n        }\n\n        /* å“åº”å¼è°ƒæ•´ */\n        @media (max-width: 640px) {\n            .product-grid {\n                grid-template-columns: 1fr;\n            }\n            .site-header {\n                padding: 1rem;\n            }\n            .promo-banner {\n                flex-direction: column;\n                gap: 5px;\n            }\n        }\n    </style>\n</head>\n<body>\n\n    <!-- ä¿ƒé”€æ¨ªå¹… -->\n    <div class=\"promo-banner\" id=\"promoBanner\">\n        <p>ğŸ”¥ å¹´ç»ˆå¤§ä¿ƒï¼å…¨åœºé™æ—¶ 8 æŠ˜ä¼˜æƒ </p>\n        <span class=\"countdown\" id=\"countdown\">02:00:00</span>\n    </div>\n\n    <!-- å¤´éƒ¨ -->\n    <header class=\"site-header\">\n        <a href=\"#\" class=\"logo\"><span>æé€Ÿ</span>è´­</a>\n        <button class=\"cart-btn\" id=\"cartBtn\">\n            ğŸ›’\n            <span class=\"cart-badge\" id=\"cartBadge\">0</span>\n        </button>\n    </header>\n\n    <!-- ä¸»å†…å®¹ -->\n    <main class=\"main-content\">\n        <nav class=\"category-nav\" id=\"categoryNav\">\n            <button class=\"cat-btn active\" data-category=\"all\">å…¨éƒ¨å•†å“</button>\n            <button class=\"cat-btn\" data-category=\"electronics\">æ•°ç ç”µå­</button>\n            <button class=\"cat-btn\" data-category=\"home\">å®¶å±…ç”Ÿæ´»</button>\n            <button class=\"cat-btn\" data-category=\"clothing\">æ—¶å°šæœé¥°</button>\n        </nav>\n\n        <div class=\"product-grid\" id=\"productGrid\">\n            <!-- å•†å“å°†é€šè¿‡ JS æ¸²æŸ“åœ¨è¿™é‡Œ -->\n        </div>\n    </main>\n\n    <!-- è´­ç‰©è½¦æŠ½å±‰ -->\n    <div class=\"cart-overlay\" id=\"cartOverlay\"></div>\n    <aside class=\"cart-drawer\" id=\"cartDrawer\">\n        <div class=\"cart-header\">\n            <h2>æˆ‘çš„è´­ç‰©è½¦</h2>\n            <button class=\"close-cart\" id=\"closeCart\">âœ•</button>\n        </div>\n        <div class=\"cart-items\" id=\"cartItems\">\n            <!-- è´­ç‰©è½¦é¡¹ç›® -->\n        </div>\n        <div class=\"cart-footer\">\n            <div class=\"cart-total\">\n                <span>æ€»è®¡:</span>\n                <span id=\"cartTotal\">Â¥0.00</span>\n            </div>\n            <button class=\"checkout-btn\" onclick=\"alert('æ„Ÿè°¢æ‚¨çš„è´­ä¹°ï¼è®¢å•å¤„ç†ä¸­...')\">ç«‹å³ç»“è´¦</button>\n        </div>\n    </aside>\n\n    <!-- äº§å“è¯¦æƒ…å¼¹çª— -->\n    <div class=\"modal-overlay\" id=\"modalOverlay\">\n        <div class=\"modal\" id=\"productModal\">\n            <button class=\"close-modal\" id=\"closeModal\">âœ•</button>\n            <img src=\"\" alt=\"\" class=\"modal-img\" id=\"modalImg\">\n            <div class=\"modal-info\">\n                <span id=\"modalStock\" class=\"stock-status\">åº“å­˜å……è¶³</span>\n                <h2 id=\"modalTitle\" style=\"margin-bottom: 1rem;\">å•†å“åç§°</h2>\n                <p id=\"modalDesc\" style=\"color: #666; line-height: 1.6; margin-bottom: 1.5rem;\">å•†å“æè¿°...</p>\n                <div class=\"price-box\">\n                    <span class=\"current-price\" id=\"modalPrice\">Â¥0.00</span>\n                    <span class=\"original-price\" id=\"modalOldPrice\">Â¥0.00</span>\n                </div>\n                <div style=\"display: flex; gap: 1rem; align-items: center; margin-top: 1rem;\">\n                    <input type=\"number\" id=\"modalQty\" value=\"1\" min=\"1\" max=\"10\" style=\"padding: 8px; width: 60px; border: 1px solid #ccc; border-radius: 4px;\">\n                    <button class=\"action-btn\" id=\"modalAddToCartBtn\">åŠ å…¥è´­ç‰©è½¦</button>\n                </div>\n            </div>\n        </div>\n    </div>\n\n    <!-- Toast æç¤º -->\n    <div class=\"toast\" id=\"toast\">\n        <span style=\"font-size: 1.2rem;\">âœ…</span>\n        <span id=\"toastMsg\">å·²åŠ å…¥è´­ç‰©è½¦</span>\n    </div>\n\n    <script>\n        // --- æ¨¡æ‹Ÿæ•°æ® ---\n        const products = [\n            {\n                id: 1,\n                name: \"æ— çº¿é™å™ªè€³æœº Pro\",\n                price: 899,\n                originalPrice: 1299,\n                category: \"electronics\",\n                image: \"https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=500&auto=format&fit=crop&q=60\",\n                description: \"æ²‰æµ¸å¼éŸ³é¢‘ä½“éªŒï¼Œé•¿è¾¾30å°æ—¶ç»­èˆªï¼Œä¸»åŠ¨é™å™ªæŠ€æœ¯ã€‚\",\n                stock: 15,\n                isHot: true,\n                isSale: true\n            },\n            {\n                id: 2,\n                name: \"æç®€æœºæ¢°é”®ç›˜\",\n                price: 349,\n                originalPrice: 499,\n                category: \"electronics\",\n                image: \"https://images.unsplash.com/photo-1587829741301-dc798b91add1?w=500&auto=format&fit=crop&q=60\",\n                description: \"é’è½´æ‰‹æ„Ÿï¼ŒRGBèƒŒå…‰ï¼Œé€‚åˆæ¸¸æˆä¸åŠå…¬ã€‚\",\n                stock: 5,\n                isHot: true,\n                isSale: false\n            },\n            {\n                id: 3,\n                name: \"æ™ºèƒ½å’–å•¡æœº\",\n                price: 599,\n                originalPrice: 799,\n                category: \"home\",\n                image: \"https://images.unsplash.com/photo-1495474472287-4d71bcdd2085?w=500&auto=format&fit=crop&q=60\",\n                description: \"ä¸€é”®åˆ¶ä½œé¦™æµ“å’–å•¡ï¼Œæ”¯æŒæ‰‹æœºAPPæ§åˆ¶ã€‚\",\n                stock: 20,\n                isHot: false,\n                isSale: true\n            },\n            {\n                id: 4,\n                name: \"çº¯æ£‰èˆ’é€‚Tæ¤\",\n                price: 99,\n                originalPrice: 159,\n                category: \"clothing\",\n                image: \"https://images.unsplash.com/photo-1521572163474-6864f9cf17ab?w=500&auto=format&fit=crop&q=60\",\n                description: \"100%æ–°ç–†é•¿ç»’æ£‰ï¼Œé€æ°”äº²è‚¤ï¼Œå¤å­£å¿…å¤‡ã€‚\",\n                stock: 50,\n                isHot: false,\n                isSale: true\n            },\n            {\n                id: 5,\n                name: \"å¤å¤æ‹ç«‹å¾—ç›¸æœº\",\n                price: 699,\n                originalPrice: 699,\n                category: \"electronics\",\n                image: \"https://images.unsplash.com/photo-1526170375885-4d8ecf77b99f?w=500&auto=format&fit=crop&q=60\",\n                description: \"å³æ‹å³å¾—ï¼Œè®°å½•ç¾å¥½ç¬é—´ï¼ŒåŒ…å«ç›¸çº¸10å¼ ã€‚\",\n                stock: 8,\n                isHot: true,\n                isSale: false\n            },\n            {\n                id: 6,\n                name: \"ç°ä»£å‡ ä½•èŠ±ç“¶\",\n                price: 129,\n                originalPrice: 199,\n                category: \"home\",\n                image: \"https://images.unsplash.com/photo-1581783342308-f792ca43d5bc?w=500&auto=format&fit=crop&q=60\",\n                description: \"åŒ—æ¬§é£æ ¼è®¾è®¡ï¼Œé€‚åˆå„ç§å®¶å±…è£…é¥°ã€‚\",\n                stock: 12,\n                isHot: false,\n                isSale: true\n            }\n        ];\n\n        // --- çŠ¶æ€ç®¡ç† ---\n        let cart = JSON.parse(localStorage.getItem('shopCart')) || [];\n        \n        // --- DOM å…ƒç´  ---\n        const productGrid = document.getElementById('productGrid');\n        const cartDrawer = document.getElementById('cartDrawer');\n        const cartOverlay = document.getElementById('cartOverlay');\n        const cartItemsContainer = document.getElementById('cartItems');\n        const cartTotalEl = document.getElementById('cartTotal');\n        const cartBadge = document.getElementById('cartBadge');\n        const modalOverlay = document.getElementById('modalOverlay');\n        \n        // --- åˆå§‹åŒ– ---\n        function init() {\n            renderProducts('all');\n            updateCartUI();\n            startCountdown(7200); // 2å°æ—¶å€’è®¡æ—¶\n            setupEventListeners();\n        }\n\n        // --- æ¸²æŸ“å•†å“åˆ—è¡¨ ---\n        function renderProducts(filterCategory) {\n            productGrid.innerHTML = '';\n            \n            const filtered = filterCategory === 'all' \n                ? products \n                : products.filter(p => p.category === filterCategory);\n\n            if(filtered.length === 0) {\n                productGrid.innerHTML = '<p style=\"grid-column: 1/-1; text-align: center; padding: 2rem;\">æš‚æ— ç›¸å…³å•†å“</p>';\n                return;\n            }\n\n            filtered.forEach(product => {\n                const card = document.createElement('article');\n                card.className = 'product-card';\n                \n                let badges = '';\n                if (product.isHot) badges += `<span class=\"badge hot\">çƒ­é”€</span>`;\n                if (product.isSale && !product.isHot) badges += `<span class=\"badge sale\">æŠ˜æ‰£</span>`;\n\n                card.innerHTML = `\n                    ${badges}\n                    <div class=\"product-img-wrapper\">\n                        <img src=\"${product.image}\" alt=\"${product.name}\" class=\"product-img\" loading=\"lazy\">\n                    </div>\n                    <div class=\"product-info\">\n                        <h3 class=\"product-title\">${product.name}</h3>\n                        <div class=\"price-box\">\n                            <span class=\"current-price\">Â¥${product.price}</span>\n                            ${product.originalPrice > product.price ? `<span class=\"original-price\">Â¥${product.originalPrice}</span>` : ''}\n                        </div>\n                        <button class=\"action-btn view-btn\" onclick=\"openModal(${product.id})\">æŸ¥çœ‹è¯¦æƒ…</button>\n                        <button class=\"action-btn\" onclick=\"addToCart(${product.id}, 1)\">åŠ å…¥è´­ç‰©è½¦</button>\n                    </div>\n                `;\n                productGrid.appendChild(card);\n            });\n        }\n\n        // --- è´­ç‰©è½¦é€»è¾‘ ---\n        function addToCart(id, qty) {\n            const product = products.find(p => p.id === id);\n            const existingItem = cart.find(item => item.id === id);\n\n            if (existingItem) {\n                existingItem.qty += parseInt(qty);\n            } else {\n                cart.push({ ...product, qty: parseInt(qty) });\n            }\n\n            saveCart();\n            updateCartUI();\n            showToast(`å·²å°† ${product.name} åŠ å…¥è´­ç‰©è½¦`);\n            toggleCart(true); // è‡ªåŠ¨æ‰“å¼€è´­ç‰©è½¦\n            if(modalOverlay.classList.contains('open')) closeModal();\n        }\n\n        function removeFromCart(id) {\n            cart = cart.filter(item => item.id !== id);\n            saveCart();\n            updateCartUI();\n        }\n\n        function changeQty(id, change) {\n            const item = cart.find(item => item.id === id);\n            if (item) {\n                const newQty = item.qty + change;\n                if (newQty > 0) {\n                    item.qty = newQty;\n                } else {\n                    return removeFromCart(id);\n                }\n            }\n            saveCart();\n            updateCartUI();\n        }\n\n        function saveCart() {\n            localStorage.setItem('shopCart', JSON.stringify(cart));\n        }\n\n        function updateCartUI() {\n            // æ›´æ–°å¾½ç« \n            const totalCount = cart.reduce((sum, item) => sum + item.qty, 0);\n            cartBadge.textContent = totalCount;\n            cartBadge.style.display = totalCount > 0 ? 'flex' : 'none';\n\n            // æ›´æ–°åˆ—è¡¨\n            cartItemsContainer.innerHTML = '';\n            let totalAmount = 0;\n\n            if (cart.length === 0) {\n                cartItemsContainer.innerHTML = '<p class=\"empty-cart-msg\">è´­ç‰©è½¦æ˜¯ç©ºçš„ï¼Œå¿«å»é€‰è´­å§ï¼</p>';\n            } else {\n                cart.forEach(item => {\n                    const itemTotal = item.price * item.qty;\n                    totalAmount += itemTotal;\n\n                    const el = document.createElement('div');\n                    el.className = 'cart-item';\n                    el.innerHTML = `\n                        <img src=\"${item.image}\" alt=\"${item.name}\">\n                        <div class=\"item-details\">\n                            <div class=\"item-title\">${item.name}</div>\n                            <div class=\"item-price\">Â¥${item.price}</div>\n                            <div class=\"qty-controls\">\n                                <button class=\"qty-btn\" onclick=\"changeQty(${item.id}, -1)\">-</button>\n                                <span>${item.qty}</span>\n                                <button class=\"qty-btn\" onclick=\"changeQty(${item.id}, 1)\">+</button>\n                            </div>\n                        </div>\n                        <button class=\"remove-btn\" onclick=\"removeFromCart(${item.id})\">ğŸ—‘ï¸</button>\n                    `;\n                    cartItemsContainer.appendChild(el);\n                });\n            }\n\n            cartTotalEl.textContent = `Â¥${totalAmount.toFixed(2)}`;\n        }\n\n        // --- äº¤äº’é€»è¾‘ ---\n        function toggleCart(isOpen) {\n            if (isOpen) {\n                cartDrawer.classList.add('open');\n                cartOverlay.classList.add('open');\n            } else {\n                cartDrawer.classList.remove('open');\n                cartOverlay.classList.remove('open');\n            }\n        }\n\n        function openModal(id) {\n            const product = products.find(p => p.id === id);\n            if(!product) return;\n\n            document.getElementById('modalImg').src = product.image;\n            document.getElementById('modalTitle').textContent = product.name;\n            document.getElementById('modalDesc').textContent = product.description;\n            document.getElementById('modalPrice').textContent = `Â¥${product.price}`;\n            document.getElementById('modalOldPrice').textContent = product.originalPrice > product.price ? `Â¥${product.originalPrice}` : '';\n            document.getElementById('modalQty').value = 1;\n            \n            const stockEl = document.getElementById('modalStock');\n            if(product.stock < 10) {\n                stockEl.textContent = `ä»…å‰© ${product.stock} ä»¶`;\n                stockEl.classList.add('stock-low');\n            } else {\n                stockEl.textContent = 'åº“å­˜å……è¶³';\n                stockEl.classList.remove('stock-low');\n            }\n\n            const addBtn = document.getElementById('modalAddToCartBtn');\n            addBtn.onclick = () => {\n                const qty = document.getElementById('modalQty').value;\n                addToCart(product.id, qty);\n            };\n\n            modalOverlay.classList.add('open');\n        }\n\n        function closeModal() {\n            modalOverlay.classList.remove('open');\n        }\n\n        function showToast(msg) {\n            const toast = document.getElementById('toast');\n            document.getElementById('toastMsg').textContent = msg;\n            toast.classList.add('show');\n            setTimeout(() => toast.classList.remove('show'), 3000);\n        }\n\n        // --- å€’è®¡æ—¶ ---\n        function startCountdown(duration) {\n            let timer = duration, hours, minutes, seconds;\n            const display = document.getElementById('countdown');\n            \n            setInterval(() => {\n                hours = parseInt(timer / 3600, 10);\n                minutes = parseInt((timer % 3600) / 60, 10);\n                seconds = parseInt(timer % 60, 10);\n\n                hours = hours < 10 ? \"0\" + hours : hours;\n                minutes = minutes < 10 ? \"0\" + minutes : minutes;\n                seconds = seconds < 10 ? \"0\" + seconds : seconds;\n\n                display.textContent = hours + \":\" + minutes + \":\" + seconds;\n\n                if (--timer < 0) {\n                    timer = duration; // å¾ªç¯å€’è®¡æ—¶\n                }\n            }, 1000);\n        }\n\n        // --- äº‹ä»¶ç›‘å¬ ---\n        function setupEventListeners() {\n            // è´­ç‰©è½¦å¼€å…³\n            document.getElementById('cartBtn').addEventListener('click', () => toggleCart(true));\n            document.getElementById('closeCart').addEventListener('click', () => toggleCart(false));\n            cartOverlay.addEventListener('click', () => toggleCart(false));\n\n            // åˆ†ç±»ç­›é€‰\n            document.getElementById('categoryNav').addEventListener('click', (e) => {\n                if (e.target.classList.contains('cat-btn')) {\n                    document.querySelectorAll('.cat-btn').forEach(btn => btn.classList.remove('active'));\n                    e.target.classList.add('active');\n                    renderProducts(e.target.dataset.category);\n                }\n            });\n\n            // å¼¹çª—å…³é—­\n            document.getElementById('closeModal').addEventListener('click', closeModal);\n            modalOverlay.addEventListener('click', (e) => {\n                if(e.target === modalOverlay) closeModal();\n            });\n        }\n\n        // å¯åŠ¨åº”ç”¨\n        init();\n    </script>\n</body>\n</html>"
    }
