n        <div class=\"cart-footer\">\n            <div class=\"cart-total-row\">\n                <span>æ€»è®¡</span>\n                <span id=\"cartTotal\">Â¥0.00</span>\n            </div>\n            <button class=\"checkout-btn\" onclick=\"alert('æ„Ÿè°¢ä½“éªŒï¼è¿™åªæ˜¯æ¼”ç¤ºã€‚')\">ç«‹å³ç»“è´¦</button>\n        </div>\n    </div>\n\n    <!-- å•†å“è¯¦æƒ…æ¨¡æ€æ¡† -->\n    <div class=\"modal-overlay\" id=\"productModal\">\n        <div class=\"modal-content\">\n            <button class=\"modal-close\" id=\"closeModal\"><i class=\"fa-solid fa-xmark\"></i></button>\n            <img src=\"\" alt=\"\" class=\"modal-img\" id=\"mImg\">\n            <div class=\"modal-details\">\n                <div id=\"mStockStatus\" class=\"stock-status\"></div>\n                <h2 class=\"product-title\" id=\"mTitle\" style=\"font-size: 1.75rem;\"></h2>\n                <p id=\"mDesc\" style=\"color: var(--text-light); margin-top: 0.5rem;\">æè¿°å†…å®¹...</p>\n                \n                <div class=\"product-price-row\">\n                    <span class=\"price\" id=\"mPrice\" style=\"font-size: 1.5rem;\"></span>\n                    <span class=\"original-price\" id=\"mOldPrice\"></span>\n                </div>\n\n                <div class=\"modal-qty-wrap\">\n                    <label>æ•°é‡:</label>\n                    <input type=\"number\" value=\"1\" min=\"1\" max=\"10\" class=\"modal-qty-input\" id=\"mQty\">\n                </div>\n\n                <button class=\"checkout-btn\" id=\"mAddBtn\">\n                    åŠ å…¥è´­ç‰©è½¦\n                </button>\n            </div>\n        </div>\n    </div>\n\n    <!-- æ¶ˆæ¯æç¤º -->\n    <div class=\"toast\" id=\"toast\">\n        <i class=\"fa-solid fa-check-circle\"></i> <span>å·²åŠ å…¥è´­ç‰©è½¦</span>\n    </div>\n\n    <script>\n        // æ¨¡æ‹Ÿå•†å“æ•°æ®\n        const products = [\n            {\n                id: 1,\n                name: \"æ— çº¿é™å™ªè€³æœº Pro\",\n                category: \"tech\",\n                price: 1299,\n                originalPrice: 1599,\n                image: \"https://picsum.photos/seed/p1/400/400\",\n                description: \"æ²‰æµ¸å¼éŸ³æ•ˆä½“éªŒï¼Œ40å°æ—¶è¶…é•¿ç»­èˆªï¼Œæ™ºèƒ½é™å™ªæŠ€æœ¯ã€‚\",\n                stock: 15,\n                isHot: true\n            },\n            {\n                id: 2,\n                name: \"å¤å¤æœºæ¢°é”®ç›˜\",\n                category: \"tech\",\n                price: 599,\n                originalPrice: 0,\n                image: \"https://picsum.photos/seed/p2/400/400\",\n                description: \"æ¸…è„†æ®µè½æ„Ÿï¼ŒRGBèƒŒå…‰ï¼Œå…¨é”®æ— å†²è®¾è®¡ï¼Œæç®€æ¡Œé¢å¿…å¤‡ã€‚\",\n                stock: 5,\n                isHot: false\n            },\n            {\n                id: 3,\n                name: \"æç®€çº¯æ£‰Tæ¤\",\n                category: \"fashion\",\n                price: 99,\n                originalPrice: 129,\n                image: \"https://picsum.photos/seed/p3/400/400\",\n                description: \"100%æ–°ç–†é•¿ç»’æ£‰ï¼Œäº²è‚¤é€æ°”ï¼Œç»å…¸ç‰ˆå‹ä¸æŒ‘èº«æã€‚\",\n                stock: 100,\n                isHot: true\n            },\n            {\n                id: 4,\n                name: \"æ™ºèƒ½è¿åŠ¨æ‰‹è¡¨\",\n                category: \"tech\",\n                price: 899,\n                originalPrice: 1099,\n                image: \"https://picsum.photos/seed/p4/400/400\",\n                description: \"å¿ƒç‡ç›‘æµ‹ï¼Œç¡çœ åˆ†æï¼Œ50ç±³é˜²æ°´ï¼Œä½ çš„ç§äººå¥åº·ç®¡å®¶ã€‚\",\n                stock: 8,\n                isHot: false\n            },\n            {\n                id: 5,\n                name: \"åŒ—æ¬§é£é™¶ç“·èŠ±ç“¶\",\n                category: \"home\",\n                price: 129,\n                originalPrice: 0,\n                image: \"https://picsum.photos/seed/p5/400/400\",\n                description: \"æ‰‹å·¥æ‹‰èƒšï¼Œç£¨ç ‚è´¨æ„Ÿï¼Œä¸ºå±…å®¶ç¯å¢ƒå¢æ·»è‰ºæœ¯æ°”æ¯ã€‚\",\n                stock: 20,\n                isHot: false\n            },\n            {\n                id: 6,\n                name: \"ä¾¿æºèƒ¶å›Šå’–å•¡æœº\",\n                category: \"home\",\n                price: 499,\n                originalPrice: 699,\n                image: \"https://picsum.photos/seed/p6/400/400\",\n                description: \"ä¸€é”®èƒå–ï¼Œé¦™é†‡æ²¹è„‚ï¼Œéšæ—¶éšåœ°äº«å—ç°ç£¨å£æ„Ÿã€‚\",\n                stock: 0, // å”®ç½„æµ‹è¯•\n                isHot: true\n            }\n        ];\n\n        // çŠ¶æ€ç®¡ç†\n        let cart = JSON.parse(localStorage.getItem('shopCart')) || [];\n        let currentCategory = 'all';\n\n        // DOM å…ƒç´ \n        const productGrid = document.getElementById('productGrid');\n        const cartOverlay = document.getElementById('cartOverlay');\n        const cartDrawer = document.getElementById('cartDrawer');\n        const cartItemsContainer = document.getElementById('cartItems');\n        const cartTotalEl = document.getElementById('cartTotal');\n        const cartCountEl = document.getElementById('cartCount');\n        const modal = document.getElementById('productModal');\n        const toast = document.getElementById('toast');\n\n        // åˆå§‹åŒ–\n        document.addEventListener('DOMContentLoaded', () => {\n            renderProducts();\n            updateCartUI();\n            startCountdown();\n            setupEventListeners();\n        });\n\n        // æ¸²æŸ“å•†å“åˆ—è¡¨\n        function renderProducts() {\n            productGrid.innerHTML = '';\n            const filtered = currentCategory === 'all' \n                ? products \n                : products.filter(p => p.category === currentCategory);\n\n            filtered.forEach(p => {\n                const hasDiscount = p.originalPrice > p.price;\n                const isOutOfStock = p.stock === 0;\n                const badge = isOutOfStock ? '' : (p.isHot ? '<div class=\"badge hot\">çƒ­é”€</div>' : (hasDiscount ? '<div class=\"badge sale\">ç‰¹æƒ </div>' : ''));\n\n                const card = document.createElement('div');\n                card.className = 'product-card';\n                card.innerHTML = `\n                    ${badge}\n                    <div class=\"product-img-wrapper\" onclick=\"openModal(${p.id})\">\n                        <img src=\"${p.image}\" class=\"product-img\" alt=\"${p.name}\">\n                    </div>\n                    <div class=\"product-info\">\n                        <div class=\"product-cat\">${getCategoryName(p.category)}</div>\n                        <div class=\"product-title\">${p.name}</div>\n                        <div class=\"product-price-row\">\n                            <span class=\"price\">Â¥${p.price}</span>\n                            ${hasDiscount ? `<span class=\"original-price\">Â¥${p.originalPrice}</span>` : ''}\n                        </div>\n                        <button class=\"add-btn\" onclick=\"addToCart(${p.id}, 1)\" ${isOutOfStock ? 'disabled' : ''}>\n                            ${isOutOfStock ? 'å·²å”®ç½„' : '<i class=\"fa-solid fa-cart-plus\"></i> åŠ å…¥è´­ç‰©è½¦'}\n                        </button>\n                    </div>\n                `;\n                productGrid.appendChild(card);\n            });\n        }\n\n        // è¾…åŠ©ï¼šè·å–åˆ†ç±»ä¸­æ–‡å\n        function getCategoryName(cat) {\n            const map = { 'tech': 'ç§‘æŠ€æ•°ç ', 'fashion': 'æ—¶å°šç©¿æ­', 'home': 'å±…å®¶ç”Ÿæ´»' };\n            return map[cat] || cat;\n        }\n\n        // è´­ç‰©è½¦é€»è¾‘\n        function addToCart(id, qty = 1) {\n            const product = products.find(p => p.id === id);\n            if (!product || product.stock === 0) return;\n\n            const existingItem = cart.find(item => item.id === id);\n            if (existingItem) {\n                existingItem.qty += parseInt(qty);\n            } else {\n                cart.push({ ...product, qty: parseInt(qty) });\n            }\n\n            saveCart();\n            updateCartUI();\n            showToast(`å·²å°† ${product.name} åŠ å…¥è´­ç‰©è½¦`);\n            if(modal.classList.contains('active')) closeModal();\n        }\n\n        function removeFromCart(id) {\n            cart = cart.filter(item => item.id !== id);\n            saveCart();\n            updateCartUI();\n        }\n\n        function changeQty(id, change) {\n            const item = cart.find(i => i.id === id);\n            if (!item) return;\n            \n            const newQty = item.qty + change;\n            if (newQty > 0) {\n                item.qty = newQty;\n            } else {\n                removeFromCart(id);\n                return;\n            }\n            saveCart();\n            updateCartUI();\n        }\n\n        function saveCart() {\n            localStorage.setItem('shopCart', JSON.stringify(cart));\n        }\n\n        function updateCartUI() {\n            // æ›´æ–°è®¡æ•°\n            const totalCount = cart.reduce((sum, item) => sum + item.qty, 0);\n            cartCountEl.textContent = totalCount;\n            cartCountEl.style.display = totalCount > 0 ? 'flex' : 'none';\n\n            // æ›´æ–°åˆ—è¡¨\n            cartItemsContainer.innerHTML = '';\n            let totalPrice = 0;\n\n            if (cart.length === 0) {\n                cartItemsContainer.innerHTML = '<div class=\"empty-cart\"><i class=\"fa-solid fa-basket-shopping\" style=\"font-size: 3rem; margin-bottom: 1rem;\"></i><p>è´­ç‰©è½¦æ˜¯ç©ºçš„</p></div>';\n            } else {\n                cart.forEach(item => {\n                    totalPrice += item.price * item.qty;\n                    const div = document.createElement('div');\n                    div.className = 'cart-item';\n                    div.innerHTML = `\n                        <img src=\"${item.image}\" alt=\"${item.name}\">\n                        <div class=\"cart-item-details\">\n                            <div class=\"cart-item-title\">${item.name}</div>\n                            <div class=\"cart-item-price\">Â¥${item.price * item.qty}</div>\n                            <div class=\"cart-controls\">\n                                <div class=\"qty-selector\">\n                                    <button class=\"qty-btn\" onclick=\"changeQty(${item.id}, -1)\">-</button>\n                                    <span class=\"qty-val\">${item.qty}</span>\n                                    <button class=\"qty-btn\" onclick=\"changeQty(${item.id}, 1)\">+</button>\n                                </div>\n                                <button class=\"remove-item\" onclick=\"removeFromCart(${item.id})\">åˆ é™¤</button>\n                            </div>\n                        </div>\n                    `;\n                    cartItemsContainer.appendChild(div);\n                });\n            }\n\n            cartTotalEl.textContent = `Â¥${totalPrice.toFixed(2)}`;\n        }\n\n        // æ¨¡æ€æ¡†é€»è¾‘\n        window.openModal = function(id) {\n            const p = products.find(item => item.id === id);\n            if(!p) return;\n\n            document.getElementById('mImg').src = p.image;\n            document.getElementById('mTitle').textContent = p.name;\n            document.getElementById('mDesc').textContent = p.description;\n            document.getElementById('mPrice').textContent = `Â¥${p.price}`;\n            document.getElementById('mOldPrice').textContent = p.originalPrice > p.price ? `Â¥${p.originalPrice}` : '';\n            document.getElementById('mQty').value = 1;\n\n            const stockEl = document.getElementById('mStockStatus');\n            const addBtn = document.getElementById('mAddBtn');\n\n            if (p.stock === 0) {\n                stockEl.textContent = \"â— å·²å”®ç½„\";\n                stockEl.className = \"stock-status out-of-stock\";\n                addBtn.disabled = true;\n                addBtn.textContent = \"æš‚æ—¶ç¼ºè´§\";\n            } else if (p.stock < 10) {\n                stockEl.textContent = `â— ä»…å‰© ${p.stock} ä»¶`;\n                stockEl.className = \"stock-status low-stock\";\n                addBtn.disabled = false;\n                addBtn.textContent = \"åŠ å…¥è´­ç‰©è½¦\";\n                addBtn.onclick = () => addToCart(p.id, document.getElementById('mQty').value);\n            } else {\n                stockEl.textContent = \"â— åº“å­˜å……è¶³\";\n                stockEl.className = \"stock-status in-stock\";\n                addBtn.disabled = false;\n                addBtn.textContent = \"åŠ å…¥è´­ç‰©è½¦\";\n                addBtn.onclick = () => addToCart(p.id, document.getElementById('mQty').value);\n            }\n\n            modal.classList.add('active');\n        }\n\n        function closeModal() {\n            modal.classList.remove('active');\n        }\n\n        // äº‹ä»¶ç›‘å¬å™¨è®¾ç½®\n        function setupEventListeners() {\n            // è´­ç‰©è½¦å¼€å…³\n            document.getElementById('cartToggle').addEventListener('click', () => {\n                cartOverlay.classList.add('open');\n                cartDrawer.classList.add('open');\n            });\n\n            const closeCartAction = () => {\n                cartOverlay.classList.remove('open');\n                cartDrawer.classList.remove('open');\n            };\n\n            document.getElementById('closeCart').addEventListener('click', closeCartAction);\n            cartOverlay.addEventListener('click', closeCartAction);\n\n            // ç­›é€‰\n            const filterBtns = document.querySelectorAll('.filter-btn');\n            filterBtns.forEach(btn => {\n                btn.addEventListener('click', (e) => {\n                    filterBtns.forEach(b => b.classList.remove('active'));\n                    e.target.classList.add('active');\n                    currentCategory = e.target.dataset.category;\n                    renderProducts();\n                });\n            });\n\n            // æ¨¡æ€æ¡†å…³é—­\n            document.getElementById('closeModal').addEventListener('click', closeModal);\n            modal.addEventListener('click', (e) => {\n                if(e.target === modal) closeModal();\n            });\n        }\n\n        // å€’è®¡æ—¶é€»è¾‘\n        function startCountdown() {\n            let time = 2 * 60 * 60 + 45 * 60 + 30; // åˆå§‹ç§’æ•° (2h 45m 30s)\n            const el = document.getElementById('countdown');\n            \n            setInterval(() => {\n                if (time <= 0) {\n                    el.textContent = \"00:00:00\";\n                    return;\n                }\n                time--;\n                const h = Math.floor(time / 3600).toString().padStart(2, '0');\n                const m = Math.floor((time % 3600) / 60).toString().padStart(2, '0');\n                const s = (time % 60).toString().padStart(2, '0');\n                el.textContent = `${h}:${m}:${s}`;\n            }, 1000);\n        }\n\n        // æ¶ˆæ¯æç¤º\n        function showToast(msg) {\n            const span = toast.querySelector('span');\n            span.textContent = msg;\n            toast.classList.add('show');\n            setTimeout(() => {\n                toast.classList.remove('show');\n            }, 3000);\n        }\n    </script>\n</body>\n</html>"
